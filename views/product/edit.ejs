<form action="/product/update/<%= product.id %>" method="POST" class="form-signin">
	<h2>Editing product #<%= product.id %></h2>

	<input value="<%= product.title %>" name="title" type="text" class="form-control"/>
	<input value="<%= product.description %>" name="description" type="text" class="form-control"/>
	<input value="<%= product.category %>" name="category" type="text" class="form-control"/>
	<input value="<%= product.photoUri %>" name="photoUri" type="text" class="form-control"/>
	<input value="<%= product.itemUri %>" name="itemUri" type="text" class="form-control"/>
	<input type="submit" value="Proceed" class="btn btn-lg btn-primary btn-block"/>
	<input type="hidden" name="_csrf" value="<%= _csrf %>" />
</form>
